@{
    List<Object> MenuItems = new List<object>();
    MenuItems.Add(new { text = "Dashboard", iconCss = "fa-solid fa-box", url = "/" });
    MenuItems.Add(new { text = "Categories", iconCss = "fa-solid fa-folder-plus", url = "/Categories" });
    MenuItems.Add(new { text = "Transactions", iconCss = "fa-solid fa-arrow-right-arrow-left", url = "/Transactions" });
    MenuItems.Add(new { text = "Reports", iconCss = "fa-solid fa-chart-simple", url = "#" });
}

<body>
<ejs-sidebar id="sidebar" width="270px" enableDock dockSize="60px"
             target=".dock-target" enableGestures="true">
    <e-content-template>
        <link rel="stylesheet" href="~/css/floatingSideBar.css" asp-append-version="true"/>
        <script src="~/js/floatingSideBar.js"></script>
        <div class="logo-wrapper">
            <div class="app-logo">
                <img src="~/favicon-32x32.png"/>
                <div class="font-logo">
                    <h6 class="fw-bold align-content-around col font-logo">Finance Tracking App</h6>
                </div>
            </div>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>
        <ejs-menu id="menu" items="MenuItems" orientation="Vertical" hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>
</body>


