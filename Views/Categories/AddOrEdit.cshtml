@model Finance_Tracking_Web_Application.Models.Category

@{
    ViewData["PageTitle"] = Model.CategoryId == 0? "Create a new category" : "Edit category";
}

<h1>CREATE OR EDIT CATEGORY</h1>

<hr/>
<div class="row ss_total">
    <div class="col-md-8">
        <div class="widget p-5">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="CategoryId" value="@Model.CategoryId"/>
                <div class="mb-4">
                    <div class="e-btn-group custom-rbt-group">
                        <input type="radio" id="radioleft" name="MoneyType" value="Expense" checked="@(Model.MoneyType == "Expense")"/>
                        <label class="e-btn" for="radioleft">Expense</label>
                        <input type="radio" id="radioright" name="MoneyType" value="Income" checked="@(Model.MoneyType == "Income")"/>
                        <label class="e-btn" for="radioright">Income</label>
                    </div>
                    <span asp-validation-for="MoneyType" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <ejs-textbox id="Title" placeholder="Category Title" ejs-for="@Model.Title" floatLabelType="Auto"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <ejs-textbox id="CategoryIcon" placeholder="Category Icon" ejs-for="@Model.CategoryIcon" floatLabelType="Auto"></ejs-textbox>
                    <span asp-validation-for="CategoryIcon" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <div class="control_btn">
                        <input type="submit" value="Submit" class="bn632-hover bn18" />
                        <a asp-action="Index" class="bn632-hover bn28 btn_back">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-4">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background: linear-gradient(to right, #141e30, #243b55);">
            <i class="fa-solid fa-money-bills fa-5x"></i>
        </div>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}